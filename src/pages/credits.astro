---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---

<Header title="Credits" />
<body>
  <div class="content">
    <Sidebar selectedItem="credits" />
    <div class="back-nav-container">
      <a href="/" class="back-nav-button w-inline-block">
        <img src="/assets/back.svg" class="back-nav-img" alt="Back" />
        <div>Back</div>
      </a>
    </div>
    <nav class="main">
      <div class="container">
        <div class="content-container">
          <h1>Credits</h1>
          <p style="max-width: 600px; color: #ccc;">
            Portfolio template adapted and customized by Jack Vega. Original
            Astro design concept modified from this
            <a
              href="https://astro.build/themes/details/codefolio/"
              target="_blank"
              rel="noopener noreferrer"
              style="color: inherit; text-decoration: underline; font-weight: 600;"
            >
              Astro community template
            </a>.
          </p>
        </div>
      </div>
    </nav>
  </div>
  <style>
    .main {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      color: #fff;
      overflow-y: auto;
      padding: 2rem 2rem 4rem;
    }

    .main h1 {
      position: relative;
      display: inline-block;
      text-align: left;
      color: #fff;
    }

    .main h1::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -0.5rem;
      width: 100%;
      height: 3px;
      background: rgba(120, 226, 160, 0.8);
      border-radius: 2px;
    }
  </style>
</body>
